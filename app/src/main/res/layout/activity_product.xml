<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/date"
                android:text="08"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/month"
                android:text="Ekim"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="marketname"
                android:textStyle="bold"
                android:id="@+id/marketName"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ordername"
                android:id="@+id/orderName"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/ic_brightness_1_red_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="productstate"
                    android:id="@+id/productState"
                    android:textColor="@color/colorBlack" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:id="@+id/productPrice"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLinearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:ael_duration="400"
        app:ael_expended="400"
        app:ael_interpolator="bounce">


        <TextView
            android:id="@id/childd"
            android:padding="8dp"
            android:text="this is child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>



</LinearLayout>